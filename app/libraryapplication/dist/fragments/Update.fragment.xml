<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idUpdateBookDialog"
        resizable="true"
        draggable="true"
        contentWidth="30%"
        title="Edit A Book"
    >
        <beginButton>
            <Button
                id="_idUpdateBooks"
                text="Update"
                press="onUpdateBook"
                type="Success"
            />
        </beginButton>
        <endButton>
            <Button
                id="idCancelBookButton"
                text="Cancel"
                press="onCloseUpdateDialog"
                type="Negative"
            />
        </endButton>
        <content>
            <form:SimpleForm
                id="idUpdateBookDetailsForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <Label
                    id="idISBNLabel"
                    text="ISBN"
                />
                <Input
                    id="idUpdateISBNInput"
                    value="{newBookModel>/ISBN}"
                />
                <Label
                    id="idUpdateBooktitleLabel"
                    text="Book title"
                />
                <Input
                    id="idUpdateBooktitleInput"
                    value="{newBookModel>/title}"
                />
                <Label
                    id="idUpdateAuthorNameLabel"
                    text="Author Name"
                />
                <Input
                    id="idUpdateAuthorNameInput"
                    value="{newBookModel>/author}"
                />
                <Label
                    id="idUpdateGenreLabel"
                    text="Genre"
                />
                <Input
                    id="idUpdateGenreInput"
                    value="{newBookModel>/genre}"
                />
                <Label
                    id="idUpdateQuantityLabel"
                    text="Quantity"
                />
                <Input
                    id="idUpdateQuantityInput"
                    value="{newBookModel>/quantity}"
                />
                   <Label
                    id="idUpdateAvailableQuantityLabel"
                    text="Available Quantity"
                />
                <Input
                    id="idUpdateAvailableQuantityInput"
                    value="{newBookModel>/AvailableQuantity}"
                />
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>
