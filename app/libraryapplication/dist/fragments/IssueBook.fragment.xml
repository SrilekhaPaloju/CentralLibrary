<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:ndc="sap.ndc"
    xmlns="sap.m"
>
    <Dialog
        id="idIssueBookDialog"
        resizable="true"
        draggable="true"
        contentWidth="30%"
        title="Issue A Book"
    >
        <beginButton>
            <Button
                id="_idIssueBookButton"
                text="Issue"
                press="onIssueBook"
                type="Success"
            />
        </beginButton>
        <endButton>
            <Button
                id="idCancelButton"
                text="Cancel"
                press="onCloseIssueDialog"
                type="Negative"
            />
        </endButton>
        <content>
            <Label
                id="idISBNLabel_"
                text="Book ID"
            />
            <Input
                id="idISBNIDInput"
                value="{newLoanModel>/books_ID}"
            />
            <Label
                id="idUserIDLabel"
                text="User ID"
            />
            <Input
                id="idUserIDInput"
                value="{newLoanModel>/users_ID}"
            />
            <Label
                id="idDueDateLabel"
                text="Due date"
            />
            <Input
                id="idDueDateInput"
                value="{newLoanModel>/duedate}"
            />
        </content>
    </Dialog>
</core:FragmentDefinition>
