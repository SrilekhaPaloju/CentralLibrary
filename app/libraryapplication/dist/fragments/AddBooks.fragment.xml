<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idAddBookDialog"
        resizable="true"
        draggable="true"
        contentWidth="30%"
        title="Add A Book"
    >
        <beginButton>
            <Button
                id="idAddBooks"
                text="create"
                press="onCreateBook"
                type="Success"
            />
        </beginButton>
        <endButton>
            <Button
                id="idCancelBook"
                text="Cancel"
                press="onCloseCreateDialog"
                type="Negative"
            />
        </endButton>
        <content>
            <form:SimpleForm
                id="idAddBookDetailsForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <Label
                    id="idAddISBNLabel"
                    text="ISBN"
                />
                <Input
                    id="idAddISBNInput"
                    value="{localModel>/ISBN}"
                />
                <Label
                    id="idAddBooktitleLabel"
                    text="Book title"
                />
                <Input
                    id="idAddBooktitleInput"
                    value="{localModel>/title}"
                />
                <Label
                    id="idAddAuthorNameLabel"
                    text="Author Name"
                />
                <Input
                    id="idAddAuthorNameInput"
                    value="{localModel>/author}"
                />
                <Label
                    id="idAddGenreLabel"
                    text="Genre"
                />
                <Input
                    id="idAddGenreInput"
                    value="{localModel>/genre}"
                />
                <Label
                    id="idAddQuantityLabel"
                    text="Quantity"
                />
                <Input
                    id="idAddQuantityInput"
                    value="{localModel>/quantity}"
                />
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>
